<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.TopupActivity"
    android:background="@color/black_80"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="50dp"
        android:layout_margin="25dp"
        android:orientation="vertical"
        android:gravity="center">

        <LinearLayout
            android:layout_margin="10pt"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:text="Top Up"
                android:textColor="@color/white"
                android:textSize="20pt"
                android:textStyle="bold" />

            <ImageView
                android:src="@drawable/logo"
                android:layout_width="25pt"
                android:layout_height="25pt"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="25pt"
            android:layout_marginBottom="5pt"
            android:background="@drawable/form_rounded"
            android:gravity="center|left">

            <EditText
                android:id="@+id/topup_vouvher_text"
                style="@style/inputForm"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Voucher Code"
                android:inputType="textEmailAddress"/>

        </LinearLayout>

        <Button
            android:id="@+id/topup_ok_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Top Up"
            android:backgroundTint="@color/button_form_color" />

    </LinearLayout>



    <ImageView
        android:id="@+id/topup_back_button"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>