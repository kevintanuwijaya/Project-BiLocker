<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/main_rounded_items"
    android:layout_margin="20dp">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:padding="25dp">

        <ImageView
            android:id="@+id/on_progress_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/shield"
            android:layout_marginRight="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/navigation_image"
            app:layout_constraintTop_toTopOf="parent"
            android:orientation="vertical"
            android:gravity="left"
            android:layout_marginLeft="10dp">

            <TextView
                android:id="@+id/on_progress_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Location"/>

            <TextView
                android:id="@+id/on_progress_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Time"/>

            <TextView
                android:id="@+id/on_progress_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Price"/>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>