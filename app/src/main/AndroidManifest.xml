<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bilocker">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BiLocker">
        <activity
            android:name=".activity.AboutUsActivity"
            android:exported="true" />
        <activity
            android:name=".activity.TopupActivity"
            android:exported="false" />
        <activity
            android:name=".activity.RegisterPage"
            android:noHistory="true"></activity>
        <activity
            android:name=".activity.TransactionDetailPage"
            android:noHistory="true"></activity>
        <activity android:name=".activity.LoginPage"></activity>
        <activity
            android:name=".activity.WelcomeScreen"
            android:noHistory="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.MainActivity"></activity>

        <meta-data
            android:name="com.google.android.geo.AIzaSyAplsuBuiercaPgXY3T8ye8DZGfk1QEEVg"
            android:value="@string/google_maps_key" />
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <uses-library
            android:name="org.apache.http.legacy"
            android:required="false" />
    </application>

</manifest>